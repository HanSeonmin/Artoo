<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#f6f6f6"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp">
        <SearchView
                android:id="@+id/sv_product_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true"
                android:queryHint="원하는 키워드를 검색해주세요 (작품명, 주제, 학교)"
                android:iconifiedByDefault="false"
                android:focusedByDefault="false"
                android:background="#00f6f6f6"
                android:searchIcon="@null"
                android:theme="@style/searchView"
                android:queryBackground="@color/colorInvisible">
        </SearchView>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.TabLayout
            android:id="@+id/tl_top_navi_act_top_menu_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="@color/colorEssential"
            app:tabIndicatorHeight="4dp" />

    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#eceff3"/>
    <android.support.v4.view.ViewPager
            android:id="@+id/vp_top_navi_act_frag_pager_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tl_top_navi_act_top_menu_mypage"
            android:background="#FFFFFF" />
